<!DOCTYPE html>
<html>
<head>
  <title>Add Task</title>
</head>
<body>
  <h1>Add New Task</h1>
  
  <% if (user) { %>
    <p>Creating task as: <%= user.username %></p>
  <% } else { %>
    <a href="/login">Login required</a>
  <% } %>
  
  <!-- Reflected XSS vulnerability -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="message"><%- message %></div>
  <% } %>
  
  <form method="post" action="/add">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description"></textarea>
    </div>
    <div>
      <label for="private_notes">Private Notes (only visible to you):</label>
      <textarea id="private_notes" name="private_notes"></textarea>
    </div>
    <button type="submit">Add Task</button>
  </form>
  <a href="/">Back to Tasks</a>
</body>
</html>